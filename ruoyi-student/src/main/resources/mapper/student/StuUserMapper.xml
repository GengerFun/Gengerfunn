<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.student.mapper.StuUserMapper">

    <resultMap type="StuUser" id="StuUserResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="stuName"    column="stu_name"    />
        <result property="jobType"    column="job_type"    />
        <result property="idStudent"    column="id_student"    />
        <result property="idNumber"    column="id_number"    />
        <result property="majorId"    column="major_id"    />
        <result property="classId"    column="class_id"    />
        <result property="dormitoryId"    column="dormitory_id"    />
        <result property="registrationStatus"    column="registration_status"    />
        <result property="email"    column="email"    />
        <result property="phonenumber"    column="phonenumber"    />
        <result property="sex"    column="sex"    />
        <result property="avatar"    column="avatar"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectStuUserVo">
        select id, user_id, stu_name, job_type, id_student, id_number, major_id, class_id, dormitory_id, registration_status, email, phonenumber, sex, avatar, del_flag, create_by, create_time, update_by, update_time, remark from stu_user
    </sql>

    <select id="selectStuUserList" parameterType="StuUser" resultMap="StuUserResult">
        <include refid="selectStuUserVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="stuName != null  and stuName != ''"> and stu_name like concat('%', #{stuName}, '%')</if>
            <if test="jobType != null  and jobType != ''"> and job_type = #{jobType}</if>
            <if test="idStudent != null  and idStudent != ''"> and id_student = #{idStudent}</if>
            <if test="idNumber != null  and idNumber != ''"> and id_number = #{idNumber}</if>
            <if test="majorId != null "> and major_id = #{majorId}</if>
            <if test="classId != null "> and class_id = #{classId}</if>
            <if test="dormitoryId != null "> and dormitory_id = #{dormitoryId}</if>
            <if test="registrationStatus != null  and registrationStatus != ''"> and registration_status = #{registrationStatus}</if>
            <if test="email != null  and email != ''"> and email = #{email}</if>
            <if test="phonenumber != null  and phonenumber != ''"> and phonenumber = #{phonenumber}</if>
            <if test="sex != null  and sex != ''"> and sex = #{sex}</if>
            <if test="avatar != null  and avatar != ''"> and avatar = #{avatar}</if>
        </where>
    </select>

    <select id="selectStuUserById" parameterType="Long" resultMap="StuUserResult">
        <include refid="selectStuUserVo"/>
        where user_id = #{id}
    </select>

    <insert id="insertStuUser" parameterType="StuUserVO" useGeneratedKeys="true" keyProperty="id">
        insert into stu_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="stuName != null">stu_name,</if>
            <if test="jobType != null">job_type,</if>
            <if test="idStudent != null">id_student,</if>
            <if test="idNumber != null">id_number,</if>
            <if test="majorId != null">major_id,</if>
            <if test="classId != null">class_id,</if>
            <if test="dormitoryId != null">dormitory_id,</if>
            <if test="registrationStatus != null">registration_status,</if>
            <if test="email != null">email,</if>
            <if test="phonenumber != null">phonenumber,</if>
            <if test="sex != null">sex,</if>
            <if test="avatar != null">avatar,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="stuName != null">#{stuName},</if>
            <if test="jobType != null">#{jobType},</if>
            <if test="idStudent != null">#{idStudent},</if>
            <if test="idNumber != null">#{idNumber},</if>
            <if test="majorId != null">#{majorId},</if>
            <if test="classId != null">#{classId},</if>
            <if test="dormitoryId != null">#{dormitoryId},</if>
            <if test="registrationStatus != null">#{registrationStatus},</if>
            <if test="email != null">#{email},</if>
            <if test="phonenumber != null">#{phonenumber},</if>
            <if test="sex != null">#{sex},</if>
            <if test="avatar != null">#{avatar},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateStuUser" parameterType="StuUser">
        update stu_user
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="stuName != null">stu_name = #{stuName},</if>
            <if test="jobType != null">job_type = #{jobType},</if>
            <if test="idStudent != null">id_student = #{idStudent},</if>
            <if test="idNumber != null">id_number = #{idNumber},</if>
            <if test="majorId != null">major_id = #{majorId},</if>
            <if test="classId != null">class_id = #{classId},</if>
            <if test="dormitoryId != null">dormitory_id = #{dormitoryId},</if>
            <if test="registrationStatus != null">registration_status = #{registrationStatus},</if>
            <if test="email != null">email = #{email},</if>
            <if test="phonenumber != null">phonenumber = #{phonenumber},</if>
            <if test="sex != null">sex = #{sex},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteStuUserById" parameterType="Long">
        delete from stu_user where id = #{id}
    </delete>

    <delete id="deleteStuUserByIds" parameterType="String">
        delete from stu_user where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
